<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboardbgm"
    tools:context=".clinic.auth.home.ScheduleDoctorsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="20dp">
        <LinearLayout
            android:overScrollMode="always"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="30dp"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Schedule"
                    android:textSize="25dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="-20dp">

                <TextView
                    android:id="@+id/schedule_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"/>
            </FrameLayout>
                <TextView
                    android:id="@+id/monday"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Monday"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:padding="5sp"
                    android:textSize="15sp"
                    android:layout_marginVertical="10dp"/>
                <TextView
                    android:id="@+id/tuesday"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Tuesday"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:padding="5sp"
                    android:textSize="15sp"
                    android:layout_marginVertical="10dp"/>
                <TextView
                    android:id="@+id/wednesday"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Wednesday"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:padding="5sp"
                    android:textSize="15sp"
                    android:layout_marginVertical="10dp"/>
                <TextView
                    android:id="@+id/thursday"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Thursday"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:padding="5sp"
                    android:textSize="15sp"
                    android:layout_marginVertical="10dp"/>
                <TextView
                    android:id="@+id/friday"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Friday"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:padding="5sp"
                    android:textSize="15sp"
                    android:layout_marginVertical="10dp"/>

                <TextView
                    android:id="@+id/saturday"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Saturday"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:padding="5sp"
                    android:textSize="15sp"
                    android:layout_marginVertical="10dp"/>

                <TextView
                    android:id="@+id/sunday"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Sunday"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:padding="5sp"
                    android:textSize="15sp"
                    android:layout_marginVertical="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_login_corners"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_addtime"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:id="@+id/confirm_schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Confirm Schedule"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</ScrollView>